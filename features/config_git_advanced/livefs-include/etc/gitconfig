[core]
	editor = vim
[color]
	ui = always
	diff = always
	branch = always
	status = always
	showbranch = always
[color "diff"]
	new = green bold
	old = yellow bold
[color "status"]
	added = green
	changed = red bold
	untracked = magenta bold
[pretty]
	shorter = "%C(yellow)%ai %n%C(magenta)%s"
[tig]
	horizontal-scroll = 20%
	ignore-case = true
	ignore-space = all
	line-graphics = utf-8
	main-view-date-display = relative
	main-view-id-display = yes
	mouse = yes
	vertical-split = no
	wrap-lines = yes
[pager]
	difftool = true
[difftool "icdiff"]
	cmd = icdiff \"$LOCAL\" \"$REMOTE\"
[difftool]
	prompt = false
[diff]
	noprefix = true
	tool = icdiff
[diff "antiword"]
	textconv = antiword -m UTF-8
[diff "docx2txt"]
	textconv = docx2txt <
[diff "exif"]
	textconv = exiftool
[diff "hex"]
	textconv = hexdump -C
[diff "json"]
	textconv = jq .
[diff "jsonlz4"]
	textconv = sh -c 'lz4jsoncat "$0"|jq .'
[diff "pandoc"]
	textconv = pandoc --to=rst
[diff "pdf"]
	textconv = sh -c 'pdftotext -layout -enc UTF-8 "$0" -'
[diff "sqlite3"]
	textconv = sqlite3 /dev/stdin .dump <
[alias]
	ci = commit
	cia = commit -a
	di = diff --color-words
	dt = difftool
	st = status
	co = checkout
	log1 = log --pretty=oneline --abbrev-commit
	logs = log --stat
[url "git@github.com:"]
        pushInsteadOf = https://github.com/
        pushInsteadOf = git://github.com/
